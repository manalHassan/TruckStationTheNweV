<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:background="#ffffff"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".postActivityPrivate">


    <ImageButton
        android:id="@+id/imageButtonPrivate"
        android:layout_width="290dp"
        android:layout_height="190dp"
        android:background="@android:color/transparent"
        android:src="@drawable/insertphoto"
        android:layout_gravity="center"
        android:onClick="imageButtonClicked"/>

    <EditText
        android:id="@+id/editNamePrivate"
        android:hint="ادخل اسم الصورة"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/postform"
        android:padding="10dp"
        android:textColorHint="#242423"
        android:maxLines="1"
        android:layout_marginTop="20dp"/>


    <EditText
        android:id="@+id/editDescPrivate"
        android:hint="ادخل تعليق للصورة"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/postform"
        android:padding="10dp"
        android:textColorHint="#242423"
        android:maxLines="1"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/buttonUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="انشر الصورة"
        android:background="@drawable/background_upload"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:padding="16dp"
        android:clickable="true"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="10dp"
        android:focusable="true"
        android:onClick="submitButtonClicked"
        />

</LinearLayout>
