<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="truckstationsa.truckstation.Rating"
    android:background="#f9f8f5">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="نتمنى ان خدماتنا اعجبتك, تقيمك يهمنا للحفاظ على جودتنا"
        android:textSize="20sp"
        android:textStyle="italic" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:rating="5"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:progressTint="#ffdb4d"
        />

    <TextView
        android:id="@+id/tvRatingScale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="رائعة, لقد احببتها"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"/>



    <Button
        android:id="@+id/btnSubmit"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/buttonstyle"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:text="ارسال الرأي"
        android:textColor="#242423"
        android:onClick="DoRating"
        />


</LinearLayout>
